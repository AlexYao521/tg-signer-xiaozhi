{
  "chat_id": -1001234567890,
  "name": "仙门频道示例",
  "daily": {
    "enable_sign_in": true,
    "enable_transmission": true,
    "enable_greeting": false
  },
  "periodic": {
    "enable_qizhen": true,
    "enable_zhuzhen": true,
    "enable_wendao": true,
    "enable_yindao": true,
    "enable_yuanying": true,
    "enable_rift_explore": true
  },
  "comment_periodic": "周期任务配置 - enable_yuanying控制元婴任务是否启用，无需手动继承或集成",
  "star_observation": {
    "enabled": true,
    "default_star": "天雷星",
    "plate_count": 5,
    "sequence": ["天雷星", "烈阳星", "玄冰星"]
  },
  "herb_garden": {
    "enabled": false,
    "default_seed": "凝血草种子",
    "seeds": {
      "凝血草种子": {
        "maturity_hours": 6,
        "exchange_batch": 5,
        "exchange_command": ".兑换 凝血草种子 {count}"
